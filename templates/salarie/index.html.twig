{% extends 'base.html.twig' %}

{% block contenu %}
<table class="table table-striped table-hover table-sm">
    <thead class="thead-light">
        <tr>
            <th>SALARIE</th>
            <th>ADRESSE</th>
            <th>CP</th>
            <th>VILLE</th>
            <th>DATE EMBAUCHE</th>
            <th>ENTREPRISE</th>
            <th>MODIFIER</th>
            <th>SUPPRIMER</th>
        </tr>
    <thead>
    <tbody class="">
    {% for salarie in salaries %}
    <tr>
        <td><a href=" {{ path('salarie_show', {'id':salarie.id}) }}">{{ salarie.prenom ~ ' ' ~ salarie.nom }}</a></td>
        <td>{{ salarie.adresse }}</td>
        <td>{{ salarie.cp }}</td>
        <td>{{ salarie.ville }}</td>
        <td>{{ salarie.dateEmbauche | date('d/m/Y') }}</td>
        <td>{{ salarie.entreprise.raisonSociale }}</td>
        <td><a class="btn btn-warning rounded-pill" href="{{ path('salarie_edit', {'id':salarie.id}) }}">Modifier</a></td>
        <td><a class="btn btn-danger rounded-pill" href="{{ path('salarie_delete', {'id':salarie.id}) }}">Supprimer</a></td>
    </tr>
    {% endfor %}
    </tbody>
</table>
<a class="btn btn-success rounded-pill" href="{{ path('salarie_add') }}">Ajouter</a>
{% endblock %}